<h1>Listing clubs</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Acronym</th>
    <th>Users</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clubs.each do |club| %>
  <tr>
    <td><%= club.name %></td>
    <td><%= club.acronym %></td>
    <td>
    <% club.users.each do |user| %>
      <%= user.email %>
    <% end %>
    </td>
    <td><%= link_to 'Show', club %></td>
    
    <% if can? :update, club %>
      <td><%= link_to 'Edit', edit_club_path(club) %></td>
    <% end %>
    <% if can? :destroy, club %>
      <td><%= link_to 'Destroy', club, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

