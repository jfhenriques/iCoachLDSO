<h1>Lineup Selection</h1>
<%= form_tag({:controller => "convocations", :action => "lineup"}, :method => "put") do %>
  <p>
    <b>Opponent:</b>
    <%= @game.opponent %>
  </p>

  <p>
    <b>Date:</b>
    <%= @game.date %>
  </p>

  <h3>Selected Players</h3>
  <table class="table table-hover">
  <thead>
    <tr>
    	<th></th>
      <th>Number</th>
      <th>Name</th>
    </tr>
  </thead>

  <% @team.players.each do |player| %>
    <% if @convocations.where(:player_id => player.id).first.called %>
      <tr>
        <% if @called.count < 19 %>
          <td><%= select_tag "selection[]", options_for_select([['Initial', 1], ['Bench', 2]]) %></td>
        <% else %>
          <td><%= select_tag "selection[]", options_for_select([['Initial', 1], ['Bench', 2], ['Excluded', 3]]) %></td>
        <% end %>
        <td><%= player.number %></td>
        <td><%= player.name %></td>
      </tr>
    <% end %>
  <% end %>
  </table>

  <%= submit_tag("Submit") %>
<% end %>


