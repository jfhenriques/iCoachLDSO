<p id="notice"><%= notice %></p>

<p>
  <b>Opponent:</b>
  <%= @game.opponent %>
</p>

<p>
  <b>Date:</b>
  <%= @game.date %>
</p>

<% if @game.played == false %> 
<h3>Selected Players</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Number</th>
        <th>Name</th>
      </tr>
    </thead>

    <% @team.players.each do |player| %>
      <% if @convocations.where(:player_id => player.id).first.called %>
        <tr>
          <td><%= player.number %></td>
          <td><%= player.name %></td>
        </tr>
      <% end %>
    <% end %>
  </table>
  
<% else %>  
<p>
  <b>Hour:</b>
  <%= @game.hour %>
</p>

<p>
  <b>At home:</b>
  <%= check_box_tag "at_home", true , @game.at_home, {:disabled => true} %>
</p>

<p>
  <b>Played:</b>
  <%= check_box_tag "played", true , @game.played, {:disabled => true} %>
</p>

<p>
  <b>Team:</b>
  <%= @game.team.name %>
</p>
</br>

