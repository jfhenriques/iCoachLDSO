<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "iCoach" %></title>
    <meta name="description" content="A web app to manage soccer teams">
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
      <div class="container-fluid main">
        <div class="row">
          <div class="span12">
            <%= render 'layouts/messages' %>
          </div>
        </div>
        <% if user_signed_in? %>
          <%= render :partial=>"notes/form", :locals => { :note => @note }%>
        <% end %>
        <div class="content row" style="margin:auto">
          <%= yield %>  
        </div>
      </div> <!--! end of .container -->
  </body>
  <footer>
    <div class="grass"></div>
    <div class="row-fluid soil">
      <div class="span12">
        <div class="span4">
          <%= image_tag "feup.png"%>
        </div>
        <div class="span4 center">
          <p>icoachteam@gmail.com<p>
        </div>
        <div class="span4 right">
          <p>Built with Ruby on Rails</p>
          <p>Copyright &copy iCoachTeam 2012</p>
        </div>
      </div>
    </div>
  </footer>
</html>
