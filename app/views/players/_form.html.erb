<%= form_for([@team.club, @team, @player]) do |f| %>
  <% if @player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@player.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
      <% @player.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row-fluid">
      <div class="span3">
          <div class="field">
              <%= f.label :number %> <br>
              <%= f.number_field :number %> 
          </div>
          <div class="field">
              <%= f.label :name %> <br>
              <%= f.text_field :name %>
          </div>    
      </div>
      <div class="span3">
          <div class="field">
              <%= f.label :position %>  <br>
              <%= f.text_field :position %>
          </div>
          <div class="field">
              <%= f.label :date_of_birth %>
              <%= f.date_select :date_of_birth%>
          </div>
      </div>
      <div class="span3">
          <div class="field">
              <%= f.label :nationality %> <br>
              <%= f.text_field :nationality %>
          </div>
          <div class="field">
              <%= f.label :height %> <br>
              <%= f.text_field :height %>
          </div>
      </div>
      <div class="span3">
          <div class="field">
              <%= f.label :weight %> <br>
              <%= f.text_field :weight %>
          </div>
      </div>
  </div>
  <div class="actions pull-right">
      <%= f.submit %>
  </div> 
  <% end %>