<div class="club-details container-fluid">
  <div class="row-fluid">
    <div class="span2">
        <img src="http://placehold.it/140x140" class="img-circle">
    </div>
    <div class="span8">
        <h1><%= link_to @team.club.name + ' - '+ @team.season, club_path(@team.club) %></h1>
        <h3><%= link_to @team.name, club_team_path(@team.club, @team) %></h3>
        <a href="#editTeamModal" role="button" class="editlink" data-toggle="modal">Edit</a>
        <%= render :partial => "teams/edit" %>
        |
        <td><%= link_to 'Destroy', club_team_path(@team.club, @team), confirm: 'Are you sure?', method: :delete, :class => 'destroylink' %></td>
    </div>
  </div>
</div>
