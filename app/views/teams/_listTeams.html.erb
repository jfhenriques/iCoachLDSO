<div class="teams">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Season</th>
        <th>Next Game</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
  <% @club.teams.each do |team| %>
    <tr>
      <td><%= link_to team.name, club_team_path(@club, team) %></td>
      <td><%= team.season %></td>
        <% game = @next_games.detect{|game| 
          if game != nil 
            game.team_id == team.id 
          end} %>
      <%# If the team doesn't have any games it doesn't print anything%> 
      <% if game != nil %>
      <td><%= game.opponent %></td>
      <td><%= game.date %> </td>
      <% else %>
      <td><%= '-' %></td>
      <td><%= '-' %></td>
      <% end %>
      <td style="text-align: center">
        <div class="btn-group">
          <%= link_to 'Games', club_team_games_path(@club, team), :class => "btn" %>
          <%= link_to 'Practices', club_team_practices_path(@club, team), :class => "btn" %>
          <%= link_to 'Injuries', club_team_injuries_path(@club, team), :class => "btn" %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
  </table>
</div>