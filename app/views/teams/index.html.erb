  <div class="club-details row-fluid">
  <div class="span12">
    <div class="span2">
      <img src="http://placehold.it/140x140" class="img-circle">
    </div>
    <div class="span8">
      <h1><%= @club.name %></h1>
      <h3>Teams</h3>
    </div>
    <div class="span2">
      <%= link_to 'New Team', new_club_team_path, :class => 'newlink' %>
    </div>
  </div>
</div>

<div class="teams row-fluid">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Season</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

  <% @teams.each do |team| %>
    <tr>
      <td><%= link_to team.name, club_team_path(@club, team) %></td>
      <td><%= team.season %></td>
      <td><%= link_to 'Edit', edit_club_team_path(@club, team), :class => 'editlink'%></td>
      <td><%= link_to 'Destroy', club_team_path(@club, team), confirm: 'Are you sure?', method: :delete, :class => 'destroylink' %></td>
      <td><%= link_to 'Games', club_team_games_path(@club, team), :class => "btn" %></td>
    </tr>
  <% end %>
  </table>
</div>
