<p id="notice"><%= notice %></p>

<p>
  <b>Season:</b>
  <%= @team.season %>
</p>

<p>
  <b>Name:</b>
  <%= @team.name %>
</p>

<p>
  <b>Club:</b>
  <%= @club.name %>
</p>

<h2>Jogadores</h2>
<% if @team.players.count == 0 %>
<em>The team doesn't have any players.</em>
<% end %>

<% if @team.players.count > 0 %>
<table class="table">
  <tr>
    <th>Number</th>
    <th>Name</th>
    <th>Position</th>
  </tr>

<% @team.players.each do |player| %>
  <tr>
    <td><%= player.number %></td>
    <td><%= player.name %></td>
    <td><%= player.position %></td>
  </tr>
<% end %>
</table>
<% end %>

<h2>Add a player:</h2>
<%= form_for([@team, @team.players.build]) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :position %><br />
    <%= f.text_field :position %>
  </div>
  <div class="field">
    <%= f.label :number %><br />
    <%= f.text_field :number %>
  </div>
  <div class="field">
    <%= f.label :date_of_birth %><br />
    <%= f.text_field :date_of_birth%>
  </div>
  <div class="field">
    <%= f.label :nationality %><br />
    <%= f.text_field :nationality %>
  </div>
  <div class="field">
    <%= f.label :height %><br />
    <%= f.text_field :height %>
  </div>
  <div class="field">
    <%= f.label :weight %><br />
    <%= f.text_field :weight %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Edit', edit_team_path(@team) %> |
<%= link_to 'Back', teams_path %>